!after editing .Xdefaults it may be reloaded with:
!xrdb -load ~/.Xdefaults

xterm*faceName: DejaVu Sans Mono Book
xterm*faceSize: 18
xterm*faceSize1: 6
xterm*faceSize2: 8
xterm*faceSize3: 10
xterm*faceSize4: 12
xterm*faceSize5: 14
xterm*faceSize6: 18
xterm*termName: xterm-256color
*scaleHeight: 1.05

! special
*.foreground:   #cccccc
*.background:   #000000
*.cursorColor:  #cccccc

! black
*.color0:       #000000
*.color8:       #737171

! red
*.color1:       #ee2e24
*.color9:       #ee2e24

! green
*.color2:       #00853e
*.color10:      #00853e

! yellow
*.color3:       #ffd204
*.color11:      #ffd204

! blue
*.color4:       #009ddc
*.color12:      #009ddc

! magenta
*.color5:       #98005d
*.color13:      #98005d

! cyan
*.color6:       #85cebc
*.color14:      #85cebc

! white
*.color7:       #cccccc
*.color15:      #ffffff
